<Page
    x:Class="Validation.Views.ImageDragandDrop"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Validation.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ImageDragandDrop"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Background="AntiqueWhite">
        <Grid Margin="20" Background="AliceBlue">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Image
                Name="ShowImage"
                Grid.Row="0"
                Width="300"
                Height="180" />
            <Border
                Name="ImageDrop"
                Grid.Row="1"
                Width="400"
                Height="150"
                AllowDrop="True"
                Background="CadetBlue"
                Drop="ImageDropNow">
                <Label
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Content="Drop your image here"
                    FontFamily="Times new roman"
                    FontSize="20" />
            </Border>
        </Grid>
    </Grid>
</Page>
