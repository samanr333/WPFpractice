<Page
    x:Class="RoutedEvents.ObjectLifetime"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RoutedEvents"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ObjectLifetime"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Initialized="Page_Initialized"
    Loaded="Page_Loaded"
    mc:Ignorable="d">

    <Grid Background="Beige">
        <TextBlock
            x:Name="DisplayText"
            Margin="0,90,0,0"
            FontFamily="Times New Roman"
            FontSize="50"
            FontWeight="Bold"
            Foreground="Blue"
            Text="Hello"
            TextAlignment="Center" />
        <Rectangle
            x:Name="DisplayRectangle"
            Width="200"
            Height="70"
            Fill="Orange" />
        <Button
            Width="100"
            Height="30"
            Margin="0,150,0,0"
            Background="Red"
            Content="Unload"
            FontSize="18"
            FontWeight="Bold"
            Click="ButtonClick"
            Foreground="White" />
    </Grid>
</Page>
