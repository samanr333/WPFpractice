<Page
    x:Class="GraphsAndCharts.Views.PieChart"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:chart="http://schemas.syncfusion.com/wpf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GraphsAndCharts.Views"
    xmlns:local1="clr-namespace:GraphsAndCharts.ViewModel"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="PieChart"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Page.DataContext>
        <local1:PercentageViewModel />
    </Page.DataContext>

    <Grid Background="White">
        <chart:SfChart Header="Percentage Pie Chart">
            <chart:SfChart.Legend>
                <chart:ChartLegend />
            </chart:SfChart.Legend>
            <chart:PieSeries
                ItemsSource="{Binding percentage}"
                XBindingPath="Name"
                YBindingPath="Value" />

        </chart:SfChart>
    </Grid>
</Page>
