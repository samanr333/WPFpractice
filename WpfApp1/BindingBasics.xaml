<Page
    x:Class="WpfApp1.BindingBasics"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfApp1"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="BindingBasics"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid Background="IndianRed">
        <Grid Width="450" Height="300" HorizontalAlignment="Left">
            <ListView x:Name="myList" ItemsSource="{Binding People}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Width="150" Header="Id" DisplayMemberBinding="{Binding Id}"/>
                        <GridViewColumn Width="150" Header="Name" DisplayMemberBinding="{Binding Name}"/>
                        <!--String Formatting-->
                        <GridViewColumn Width="150" Header="Salary" DisplayMemberBinding="{Binding Salary, StringFormat={}{0:C}}"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
    </Grid>
</Page>
