<Page
    x:Class="Navigation.FirstPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Navigation"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="FirstPage"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid Background="Purple">
        <TextBlock
            FontSize="50"
            FontWeight="Bold"
            Foreground="Bisque"
            Text="Hello, Welcome to First Page."
            TextAlignment="Center" />
        <WrapPanel Height="200" Margin="50">
            <Border Background="GhostWhite">
                <TextBlock>
                    <Hyperlink NavigateUri="/SecondPage.xaml">
                        Click To Navigate to Second Page
                    </Hyperlink>
                </TextBlock>
            </Border>
            <!--<Border Margin="20,0,0,0" Background="GhostWhite">
                <TextBlock>
                    <Hyperlink NavigateUri="https://www.google.com/" RequestNavigate="OpenGoogle">
                        Google
                    </Hyperlink>
                </TextBlock>
            </Border>-->
        </WrapPanel>
    </Grid>
</Page>
