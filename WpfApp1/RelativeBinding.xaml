<Page
    x:Class="WpfApp1.RelativeBinding"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfApp1"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="RelativeBinding"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Background="AliceBlue">
        <WrapPanel Margin="10">
            <!--  Self Binding width of rectangle to its height  -->
            <Rectangle
                Width="{Binding RelativeSource={RelativeSource Self}, Path=Height}"
                Height="150"
                Fill="Green"
                Stroke="Black" />
            <!--  Find Ancestors  -->
            <Border
                Name="Parent0"
                Width="200"
                Height="200">
                <Border>
                    <Rectangle
                        Width="{Binding RelativeSource={RelativeSource AncestorType={x:Type Border}, AncestorLevel=1}, Path=ActualWidth}"
                        Height="{Binding RelativeSource={RelativeSource self}, Path=Width}"
                        Fill="pink" />
                </Border>
            </Border>
        </WrapPanel>
    </Grid>
</Page>
