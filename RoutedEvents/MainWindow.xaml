<Window
    x:Class="RoutedEvents.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RoutedEvents"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid Background="Beige">
        <Button
            Width="500"
            Height="100"
            Background="Pink"
            Click="Button1_Click">
            <Grid>
                <Button
                    Width="100"
                    Height="50"
                    Margin="-127,0,227,0"
                    Background="Blue"
                    Click="Button2_Click" />
                <Ellipse
                    Margin="55,0,55,0"
                    Fill="Green"
                    PreviewMouseMove="Elipse1_Move" />
                <Ellipse
                    Margin="231,0,-121,0"
                    Fill="red"
                    MouseDown="Elipse2_Click" />

            </Grid>
        </Button>
    </Grid>
</Window>
