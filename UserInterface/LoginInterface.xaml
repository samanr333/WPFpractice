<Window
    x:Class="UserInterface.LoginInterface"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="LoginInterface"
    Width="550"
    Height="350"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.Resources>
        <!--  PasswordBox style  -->
        <Style x:Key="PasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="Height" Value="28" />
            <Setter Property="Margin" Value="0,5,0,0" />
            <Setter Property="Padding" Value="10,0,0,0" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="BorderBrush" Value="DarkGray" />
            <Setter Property="BorderThickness" Value="0,0,0,2" />
            <Setter Property="CaretBrush" Value="LightGray" />
            <Setter Property="FontFamily" Value="Montserrat" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="Foreground" Value="White" />
        </Style>
        <!--  TextBox style  -->
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="28" />
            <Setter Property="Margin" Value="0,5,0,0" />
            <Setter Property="Padding" Value="10,0,0,0" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="BorderBrush" Value="DarkGray" />
            <Setter Property="BorderThickness" Value="0,0,0,2" />
            <Setter Property="CaretBrush" Value="LightGray" />
            <Setter Property="FontFamily" Value="Montserrat" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="Foreground" Value="White" />
        </Style>
        <!--  TextBlock style  -->
        <Style x:Key="TextBlockStyle" TargetType="TextBlock">
            <Setter Property="Margin" Value="0,15,0,0" />
            <Setter Property="FontFamily" Value="Montserrat" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="Foreground" Value="DarkGray" />
        </Style>
    </Window.Resources>
    <Grid>
        <Border Style="{StaticResource CustomBorderStyle}" />
        <StackPanel
            Grid.Row="1"
            Width="220"
            Margin="0,35,0,0"
            VerticalAlignment="Center"
            Orientation="Vertical">
            <TextBlock
                HorizontalAlignment="Center"
                FontFamily="Montserrat"
                FontSize="25"
                FontWeight="Medium"
                Foreground="White"
                Text="Login" />

            <TextBlock Style="{StaticResource TextBlockStyle}" Text="Username" />
            <TextBox x:Name="UsernameBox" Style="{StaticResource TextBoxStyle}">
                <TextBox.Background>
                    <ImageBrush AlignmentX="Left" Stretch="None" />
                </TextBox.Background>
            </TextBox>
            <TextBlock Style="{StaticResource TextBlockStyle}" Text="Password" />
            <PasswordBox x:Name="PasswordBox" Style="{StaticResource PasswordBoxStyle}">
                <PasswordBox.Background>
                    <ImageBrush AlignmentX="Left" Stretch="None" />
                </PasswordBox.Background>
            </PasswordBox>
            <Button
                Margin="0,50,0,0"
                BorderThickness="0"
                Content=" Login"
                Cursor="Hand"
                FontFamily="Montserrat"
                FontSize="12"
                Foreground="White" Click="Button_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#462AD8" />
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#28AEED" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Width="150"
                            Height="40"
                            Background="{TemplateBinding Background}"
                            CornerRadius="20">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <StackPanel
                Width="220"
                Margin="0,15,0,0"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock
                    FontFamily="Montserrat"
                    FontSize="12"
                    FontWeight="Medium"
                    Foreground="DarkGray"
                    Text="Forgot Password?" />
                <Button
                    Margin="8,0,0,0"
                    Background="Transparent"
                    BorderThickness="0"
                    Content="Reset"
                    Cursor="Hand"
                    FontFamily="Montserrat"
                    FontSize="12"
                    FontWeight="Medium"
                    Foreground="White">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <!--  Sign Up button  -->
                <Button
                    Margin="8,0,0,0"
                    Background="#322c5a"
                    BorderThickness="0"
                    Click="SignUpClick"
                    Content="Sign Up"
                    Cursor="Hand"
                    FontFamily="Montserrat"
                    FontSize="10"
                    FontWeight="Medium"
                    Foreground="White"
                    Opacity=".98"
                    OpacityMask="Purple">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border
                                Width="45"
                                Height="15"
                                Background="{TemplateBinding Background}"
                                CornerRadius="5">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </StackPanel>
        <!--  For Close button  -->
        <Label
            Height="25"
            Margin="0,10,10,320"
            HorizontalAlignment="Right"
            Content="❌"
            Cursor="Hand"
            FontSize="10"
            Foreground="PaleVioletRed"
            MouseDown="CloseWindow" />
    </Grid>
</Window>
